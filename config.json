{
	"data": {
		"filename": "merged.csv",
		"test_filename": "merged_test.csv",        
		"columns": [
            "spread",
            "price",
            "size",
            "arrival_rate",
            "Trade",
            "imbalance",
            "mid"
		],
		"sequence_length": 50,
		"train_test_split": 1,
		"normalise": false
	},
	"training": {
		"epochs": 100,
		"batch_size": 256
	},
	"model": {
		"loss": "mse",
		"optimizer": "adam",
		"save_dir": "saved_models",
		"layers": [
			{
				"type": "lstm",
				"neurons": 100,
				"input_timesteps": 49,
				"input_dim": 11,
				"return_seq": true
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "lstm",
				"neurons": 150,
				"return_seq": true
			},
			{
				"type": "lstm",
				"neurons": 100,
				"return_seq": false
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "dense",
				"neurons": 1,
				"activation": "linear"
			}
		]
	}
}
