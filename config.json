{
	"data": {
		"filename": "merged.csv",
		"test_filename": "merged_test.csv",        
		"columns": [
            "target",
            "spread",
            "price",
            "size",
            "arrival_rate",
            "Trade",
            "imbalance",
            "mid"
		],
		"sequence_length": 50,
		"train_test_split":0.8,
		"normalise": false
	},
	"training": {
		"epochs": 10,
		"batch_size": 256
	},
	"model": {
		"loss": "mse",
		"optimizer": "adam",
		"save_dir": "saved_models",
		"layers": [
			{
				"type": "lstm",
				"neurons": 20,
				"input_timesteps": 50,
				"input_dim": 7,
				"return_seq": true
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "lstm",
				"neurons": 30,
				"return_seq": true
			},
			{
				"type": "lstm",
				"neurons": 30,
				"return_seq": false
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "dense",
				"neurons": 1,
				"activation": "sigmoid"
			}
		]
	}
}
